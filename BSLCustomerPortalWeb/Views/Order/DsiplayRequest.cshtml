
@{
    ViewBag.Title = "DsiplayRequest";
}

@{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script>
        $(document).ready(function () {
            Fn_Get_Sample_Request();
            var catId = 1;
            if (catId == 1) {
                $(".dvF").show();
                $(".dvG").hide();
                $(".dvY").hide();
            }
            else if (catId == 2) {
                $(".dvF").hide();
                $(".dvG").show();
                $(".dvY").hide();
            }
            else if (catId == 3) {
                $(".dvF").hide();
                $(".dvG").hide();
                $(".dvY").show();
            }
            else {

            }
        });

        function Fn_Get_Sample_Request() {

            var clsSamplRequest = {};
            clsSamplRequest.UserId = 1;

            $.ajax({
                type: "POST",
                url: '/Order/Fn_Get_Sample_Request',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsSamplRequest),
                success: function (data) {
                    $("#tbody").html('');

                    var obj = JSON.parse(data.message);
                    var html = '';
                    if (obj[0].vErrorMsg == "Success") {
                        for (var i = 0; i < obj.length; i++) {

                            var catId = "";
                            if (obj[i].vCategory == "Fabric") {
                                catId = 1;
                            }
                            else if (obj[i].vCategory == "Garments") {
                                catId = 2;
                            }
                            else if (obj[i].vCategory == "Yarn") {
                                catId = 3;
                            }
                            html += "<tr>";
                            html += "<td style='padding: 5px;'> <span onclick='Fn_Get_Sample_Request_Detail(" + obj[i].RequestId + ", " + catId + ");'>" + obj[i].RequestId + "</td>";
                            html += "<td style='padding: 5px;'>" + obj[i].UserName + "</td>";
                            html += "<td style='padding: 5px;'>" + obj[i].vRequestDate + "</td>";
                            html += "<td style='padding: 5px;'>" + obj[i].vCategory + "</td>";
                            html += "<td style='padding: 5px;'>" + obj[i].vStatus + "</td>";
                            html += "</td>";
                        }
                    }
                    else {
                        html += "<tr><td colspan='5'><p class='text-center'>" + obj[0].vErrorMsg + "</p></td></tr>";
                    }
                    $("#tbody").append(html);
                },
                error: function (err) {
                    alert(err);
                }
            });
        }

        function Fn_Get_Sample_Request_Detail(id, catId) {

            debugger;
            var clsSamplRequestList = {};
            clsSamplRequestList.RequestId = id;

            $.ajax({
                type: "POST",
                url: '/Order/Fn_Get_Sample_Request_Detail',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsSamplRequestList),
                success: function (data) {
                    $("#tbodyDetail").html('');
                    var obj = JSON.parse(data.message)
                    var html = ''; var html2 = '';
                    if (obj[0].vErrorMsg == "Success") {
                        for (var i = 0; i < obj.length; i++) {

                            html += "<tr>";
                            html += "<td style='padding: 5px;'>" + obj[i].vProduct + "</td>";
                            html += "<td style='padding: 5px;' class='dvF'>" + obj[i].Color + "</td>";
                            html += "<td style='padding: 5px;' class='dvF'>" + obj[i].bShadeCard + "</td>";
                            html += "<td style='padding: 5px;' class='dvF'>" + obj[i].bYardage + "</td>";

                            html += "<td style='padding: 5px;' class='dvY'>" + obj[i].vCount + "</td>";
                            html += "<td style='padding: 5px;' class='dvY'>" + obj[i].vBlendDescription + "</td>";
                            html += "<td style='padding: 5px;' class='dvY'>" + obj[i].vBlendPercentage + "</td>";
                            html += "<td style='padding: 5px;' class='dvY'>" + obj[i].vEndUse + "</td>";
                            html += "<td style='padding: 5px;' class='dvY'>" + obj[i].vDye + "</td>";

                            html += "<td style='padding: 5px;' class='dvG'>" + obj[i].vStyle + "</td>";
                            html += "<td style='padding: 5px;' class='dvG'>" + obj[i].vStyleNo + "</td>";
                            html += "<td style='padding: 5px;' class='dvG'>" + obj[i].vFabricQuality + "</td>";
                            html += "</td>";
                        }

                        if (catId == 1) {
                            html2 += "<tr><td style='padding: 5px;' colspan='4' class='text-center'>" + id + "</td></tr>";
                        }
                        else if (catId == 2) {
                            html2 += "<tr><tdstyle='padding: 5px;' colspan='4' class='text-center'>" + id + "</td></tr>";
                        }
                        else if (catId == 3) {
                            html2 += "<tr><td style='padding: 5px;' colspan='6' class='text-center'>" + id + "</td></tr>";
                        }

                        $("#tbodyDetail").append(html2);
                    }
                    else {
                        if (catId == 1) {
                            html += "<tr><td style='padding: 5px;' colspan='4' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";
                        }
                        else if (catId == 2) {
                            html += "<tr><td style='padding: 5px;' colspan='4' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";
                        }
                        else if (catId == 3) {
                            html += "<tr><td style='padding: 5px;' colspan='6' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";
                        }

                    }
                    $("#tbodyDetail").append(html);

                    if (catId == 1) {
                        $(".dvF").show();
                        $(".dvG").hide();
                        $(".dvY").hide();
                    }
                    else if (catId == 2) {
                        $(".dvF").hide();
                        $(".dvG").show();
                        $(".dvY").hide();
                    }
                    else if (catId == 3) {
                        $(".dvF").hide();
                        $(".dvG").hide();
                        $(".dvY").show();
                    }
                    else {

                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        }

    </script>
}

