
@{
    ViewBag.Title = "Reorder";
}

@{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            Fn_GET_Reorder()

        });

        function Fn_GET_Reorder() {

            const urlParams = new URLSearchParams(window.location.search);
            const prmvstatus = urlParams.get('vstatus');

            var clsReorder = {};
            clsReorder.UserId = sessionStorage.getItem("CustId");;
            clsReorder.vStatus = prmvstatus;
            $.ajax({
                type: "POST",
                url: '/Order/Fn_GET_Reorder',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsReorder),
                success: function (data) {
                    $("#tbody").html('');
                    var obj = JSON.parse(data.message);
                    var html = ''; 
                    if (obj[0].vErrorMsg == "Success") {
                        for (var i = 0; i < obj.length; i++) {


                            html += "<tr style='padding: 10px;'>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].RID + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Material + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Descriptions + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Shade + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Qty + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].UOM + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'><a href='@Url.Action("CreateReorder", "Order")?rid=" + obj[i].RID + "&type=E&so=" + obj[i].SO + "'><i class='fa fa-edit text-success'></i></a></td>";
                            html += "</tr>";
                           
                        }
                    }
                    else {

                        html += "<tr><td style='font-size: 12px;' colspan='7' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";
                    }
                    $("#tbody").append(html);

                },
                error: function (err) {
                    alert(err);
                }
            });
        }

    </script>
}

