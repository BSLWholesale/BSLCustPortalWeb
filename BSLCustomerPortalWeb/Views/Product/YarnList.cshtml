    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            Fn_Get_Search_Yarn();

        });

        function Fn_Get_Search_Yarn() {

            var imgPathCRM = '@System.Configuration.ConfigurationManager.AppSettings["imgPathCRM"]';
            const urlParams = new URLSearchParams(window.location.search);
            const prmGDType = urlParams.get('gd');
            $('#liPRM').html(prmGDType + " >");

            var clsYarn = {};
            clsYarn.GDType = prmGDType;

            $.ajax({
                type: "POST",
                url: '/Product/Fn_Get_Search_Yarn',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsYarn),
                success: function (data) {
                    $("#dvYarnProduct").html('');
                    var obj = JSON.parse(data.message);
                    if (obj[0].vErrorMsg == 'Success') {

                        var div3Content = ''; var imPath = imgPathCRM + "/web/Images/Yarn_Icon/";
                        var rowCount = 1;
                        for (var i = 0; i < obj.length; i++) {

                            div3Content = div3Content + "<div class='col-lg-3 col-md-6 col-sm-8'>";
                            div3Content = div3Content + "<div class='singel-publication mt-30'>";
                            div3Content = div3Content + "<a href='@Url.Action("YarnDetail", "Product")?code=" + obj[i].MaterialCode + "'>";
                            div3Content = div3Content + "<div class='image'>";
                            div3Content = div3Content + "<img src='" + imPath + obj[i].MaterialCode + ".jpeg?t = " + new Date().getTime() + "'  alt='" + obj[i].MaterialCode + "'>";
                            div3Content = div3Content + "</div></a>";
                            div3Content = div3Content + "<div class='name'>";
                            div3Content = div3Content + "<p style='font-size: 12px; line-height: 20px;'>MaterialCode: " + obj[i].MaterialCode + "</p>";
                            div3Content = div3Content + "<p style='font-size: 12px; line-height: 20px;'>BlendDescription: " + obj[i].BlendDescription + "</p>";
                            div3Content = div3Content + "<p style='font-size: 12px; line-height: 20px;'>Count: " + obj[i].Count + "</p>";
                            div3Content = div3Content + "</div>";
                            div3Content = div3Content + "</div>";
                            div3Content = div3Content + " </div>";
                            rowCount++;
                        }
                    }
                    else {

                    }
                    $('#dvYarnProduct').append(div3Content);
                    $('#liCountItem').html("Showing " + rowCount + " Items");
                    $("img").on("error", function () {
                        $(this).attr("src", "/Images/placeholder.jpg");
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        }


    </script>
}


