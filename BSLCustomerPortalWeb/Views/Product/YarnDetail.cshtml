
@{
    ViewBag.Title = "YarnDetail";
}

@{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            Fn_Get_Search_Yarn();

        });

        function Fn_Get_Search_Yarn() {

            var imgPathCRM = '@System.Configuration.ConfigurationManager.AppSettings["imgPathCRM"]';
            const urlParams = new URLSearchParams(window.location.search);
            const prmCode = urlParams.get('code');
            $('#liPRM').html(prmCode + " >");

            var clsYarn = {};
            clsYarn.MaterialCode = prmCode;

            $.ajax({
                type: "POST",
                url: '/Product/Fn_Get_Search_Yarn',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsYarn),
                success: function (data) {
                    $("#dvYarnProduct").html('');
                    var obj = JSON.parse(data.message);
                    if (obj[0].vErrorMsg == 'Success') {

                        var imgPath = imgPathCRM + "/web/Images/Yarn/" + obj[0].MaterialCode + ".jpeg?t = " + new Date().getTime();

                        $('#imgMaim').attr('src', imgPath);
                        $('a.aMain').attr('href', imgPath);
                        $('#MaterialCode').html(obj[0].MaterialCode);
                        $('#spnMaterialDescription').html(obj[0].MaterialDescription);
                        $('#spnGDType').html(obj[0].GDType);
                        $('#spnPly').html(obj[0].Ply);
                        $('#spnCount').html(obj[0].Count);
                        $('#spnCountType').html(obj[0].CountType);
                        $('#spnBlendDescription').html(obj[0].BlendDescription);
                        $('#spnSLUB').html(obj[0].SLUB);
                        $('#spnTechnique').html(obj[0].Technique);
                        $('#spnQuality').html(obj[0].Quality);
                        $('#spnSpecialFeature').html(obj[0].SpecialFeature);
                    }
                    else {

                    }
                
                    $("img").on("error", function () {
                        $(this).attr("src", "/Images/placeholder.jpg");
                    });
                },
                error: function (err) {
                    alert(err);
                }
            });
        }


    </script>
}

