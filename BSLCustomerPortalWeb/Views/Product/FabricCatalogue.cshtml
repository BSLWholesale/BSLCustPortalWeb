<script type="text/javascript">

    $(document).ready(function () {
        Fn_Get_Fabric_CatalogueDetail();
    });


    function Fn_Get_Fabric_CatalogueDetail() {

        var clsFabric = {};

        $.ajax({
            type: "POST",
            url: '/Product/Fn_Get_Fabric_CatalogueDetail',
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            data: JSON.stringify(clsFabric),
            success: function (data) {
                $("#divFabricCatalogue").html('');
                var obj = JSON.parse(data.message);
                if (obj[0].vErrorMsg == "Success") {
                    var div3Content = '';
                    for (var i = 0; i < obj.length; i++) {
                        div3Content = div3Content + "<div class='col-lg-3 col-md-6 col-sm-8'>";
                        div3Content = div3Content + "<div class='singel-publication mt-10'>";
                        div3Content = div3Content + "<div class='image'>";
                        div3Content = div3Content + "<a href='@Url.Action("FabriCatalogueDetail", "Product")?Code=" + obj[i].MaterialCode + "'><img class='image' src='/Images/Fabriccatalogue/" + obj[i].MaterialCode + ".jpeg?t=" + new Date().getTime() + "' width='227px' height='227px' /></a><br/>";
                        div3Content = div3Content + "</div>";
                        div3Content = div3Content + "<div class='name'>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Blend Value : " + obj[i].BlendValue + "</p>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Weave Type: " + obj[i].WeaveType + "</p>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Strech Type: " + obj[i].StrechType + "</p>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Design Pattern: " + obj[i].DesignPattern + "</p>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Shade: " + obj[i].Shade + "</p>";
                        div3Content = div3Content + "<p class='text-left pt-0' style='font-size: 12px;'>Usage: " + obj[i].Usage + "</p>";
                        div3Content = div3Content + "</div>";
                        div3Content = div3Content + "</div>";
                        div3Content = div3Content + "</div>";
                    }
                }
                else {

                }
                $("#divFabricCatalogue").append(div3Content);
                $("img").on("error", function () {
                    $(this).attr("src", "/Images/placeholder.jpg");
                });
            },
            error: function (err) {
                alert(err);
            }
        });
    }


</script>


