
@{
    ViewBag.Title = "Claim";
}

@{
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {

            Fn_Get_Claim();

        });

        function Fn_Get_Claim() {

            
            var clsPaymentLedger = {};
           // clsPaymentLedger.Customer = sessionStorage.getItem("SAPCustId"); 
            clsPaymentLedger.Customer = "1100004258";
            clsPaymentLedger.DocumentType = "DG";

            $.ajax({
                type: "POST",
                url: '/Payment/Fn_Get_Claim',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsPaymentLedger),
                success: function (data) {
                    $("#tbody").html('');
                    var obj = JSON.parse(data.message);
                    var html = ''; var rowCount = 1;
                    if (obj[0].vErrorMsg == "Success") {
                        for (var i = 0; i < obj.length; i++) {

                            html += "<tr style='padding: 10px;'>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Customer + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Name1 + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].DocumentDate + "</td>";

                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Days1 + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Days2 + "</td>";

                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Assignment + "</td>";
                            html += "<td style='padding: 10px; font-size: 12px;'>" + obj[i].Text + "</td>";

                            html += "</td>";
                            rowCount++;
                        }
                    }
                    else {

                        html += "<tr><td style='font-size: 12px;' colspan='7' class='text-center'>" + obj[0].vErrorMsg + "</td></tr>";
                    }
                    $("#tbody").append(html);
                    $("#liItemCount").append(rowCount + " Records");
                },
                error: function (err) {
                    alert(err);
                }
            });
        }



    </script>
}

