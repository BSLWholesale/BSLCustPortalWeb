<script type="text/javascript">

    function Fn_Insert_CustomerContactMessage() {
        debugger
        if ($("#txtName").val() == "") {
            swal("Contact Us", "Please Enter Your Name", "error");
        }
        else if ($("#txtEmail").val() == "") {
            swal("Contact Us", "Please Enter Your Email ID", "error");
        }
        else if ($("#txtMobile").val() == "") {
            swal("Contact Us", "Please Enter Your Mobile Number", "error");
        }
        else if ($("#txtAddress").val() == "") {
            swal("Contact Us", "Please Enter Your Address", "error");
        }
        else if ($("#txtMessage").val() == "") {
            swal("Contact Us", "Please Enter Your Message", "error");
        }
        else {
            debugger
            var clsCustomerContactMessages = {};

            clsCustomerContactMessages.CustId = sessionStorage.getItem("CustId");
            clsCustomerContactMessages.Name = $("#txtName").val().trim();
            clsCustomerContactMessages.Email = $("#txtEmail").val().trim();
            clsCustomerContactMessages.Mobile = $("#txtMobile").val().trim();
            clsCustomerContactMessages.Address = $("#txtAddress").val().trim();
            clsCustomerContactMessages.Message = $("#txtMessage").val().trim();
            debugger
            $.ajax({
                type: "POST",
                url: "/Home/Fn_Insert_CustomerContactMessage",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: JSON.stringify(clsCustomerContactMessages),
                success: function (data) {
                    var obj = JSON.parse(data.message);
                    if (obj.ErrorMsg == "Success") {
                        swal("", "Your Query Added", "success");
                    }
                    else {
                        swal("", obj.ErrorMsg, "error");
                    }
                },
                error: function (err) {
                    alert(err);
                }
            });
        }
    }

</script>

